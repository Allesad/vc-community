@model CustomerModel
@{
    ViewBag.Title = Html.Title("Account Dashboard".Localize());
    Layout = "_Layout.cshtml";
}

<ul id="messages" class="messages">
	@if (ViewBag.Messages != null)
	{
		foreach (var message in ViewBag.Messages)
		{
			<li class="notice-msg">
				<ul><li><span>@message</span></li></ul>
			</li>
		}
	}
</ul>

<div class="dashboard">
    <div class="page-title">
        <h1>
            @("My Dashboard".LocalizeHtml())</h1>
    </div>
    <div class="welcome-msg">
        <p class="hello">
            <strong>@("Hello".LocalizeHtml()), @Model.FullName!</strong></p>
        <p>
            @(@"From your My Account Dashboard you have the ability to view a snapshot of your recent
            account activity and update your account information. Select a link below to view
            or edit information.".LocalizeHtml())</p>
    </div>
    <!-- recent orders -->
    @{Html.RenderAction("RecentOrders");}
    <!-- account info -->
	@{Html.RenderAction("AccountInfo");}
	
	@{Html.RenderAction("RemoveExternalLogins");}

</div>
