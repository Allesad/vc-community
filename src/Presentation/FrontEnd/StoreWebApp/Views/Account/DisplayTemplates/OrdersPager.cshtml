@model VirtoCommerce.Foundation.Orders.Model.Order[]

@{
    var pageLimits = new[] {10, 20, 50};
}

<div class="pager">
    <span class="amount">@Model.Count() @("Item(s)".Localize())</span>
    <div class="limiter">
        <span>@("Show".Localize())</span>
        <select name="limit" id="" onchange="$.redirect(this.value)">
            @for (int i = 0; i< pageLimits.Length; i++)
            {;
                var selected = "";
                int currentLimit;;
                if (Request.QueryString["limit"] != null && int.TryParse(Request.QueryString["limit"], out currentLimit) && currentLimit == pageLimits[i])
                {
                    selected = "selected=\"selected\"";
                }
                else if (i == 0)
                {
                    selected = "selected=\"selected\"";
                }
                <option value="@Url.Action("Orders", new { limit = pageLimits[i] })" @selected>@pageLimits[i]</option>
            }
        </select>
        <span>@("per page".Localize())</span>
    </div>
</div>
