@model CatalogItemWithPriceModel

<a class="pic" href="@Url.ItemUrl(Model.CatalogItem.Item, Model.CatalogItem.ParentItemId)" title="@Model.DisplayName">
    <img src="@Url.Image(Model.CatalogItem.Item, "primaryimage")" width="125" height="125" alt="@Model.CatalogItem.Code" onerror="this.onerror=null;this.src='@Href("~/Content/themes/default/images/blank.png")';" />
</a>
<a href="@Url.ItemUrl(Model.CatalogItem.Item, Model.CatalogItem.ParentItemId)" style="max-height: 30px; overflow: hidden;">
    @Model.DisplayName
</a>
<label>
    @if (Model.Price != null)
    {
        Write(Model.Price.SalePriceFormatted ?? Model.Price.ListPriceFormatted);
    }
</label>
