<script type="text/javascript">
    $(document).ready(function ()
    {

        initItemPage();
        var spinner = initQtySpinner("#qty", "@((int)(Model.Availability.MinQuantity))", "@((int)(Model.Availability.MaxQuantity))");

		@if (!Model.Availability.IsAvailable)
  {
            @:$("#qty").spinner("disable");
        }
  else
  {
		    @:$("#qty").val("@Math.Round(Model.Availability.MinQuantity, 0)");
                }

        loadVariations("@Model.CatalogItem.ItemId", "@Request.QueryString["variationId"]");

        Reviews.init({ container: "#reviewsTemplateContainer", currentItemId: "@Model.CatalogItem.ItemId" });

        $(".add_reviews_link").on('click', function ()
        {
            var isAuthorized = '@UserHelper.CustomerSession.IsRegistered';

            if (isAuthorized == "True")
            {
                tb_show('@("Create Review".Localize())', "@Url.Action("AddReview", "Catalog", new { id = Model.CatalogItem.ItemId, height = 550 })", false);
            }
            else
            {
                tb_show('@("Login or Create New Account".Localize())', "@Url.Action("LogOnAsync", "Account")", false);
            }

            return false;
        });

        // Slider
        $('.products-previews, .slider-products').virtoSlider({ speed: 300 });
        $('.product-additional').virtoSlider({
            elementVisible: 1,
            speed: 350
        });
    });
</script>


