@model CatalogItemWithPriceModel

@if (Model != null)
{
    if (!ViewData.Keys.Contains("NoCompare"))
    {
        @:<li class="wishlist">
    }
    else
    {
        @:<p>
    }
            <a href="#" onclick=" return VirtoCart.addToWishList('@("Item added to wish list".Localize())', '@Url.Encode(Model.CatalogItem.ItemId)', '@Url.Encode(Model.CatalogItem.ParentItemId)', 1) ">
                @if (!string.Equals(ViewData["View"], "Details"))
                {
                    <span>+</span>
                }
                @("Add to Wishlist".Localize())
            </a>
    if (!ViewData.Keys.Contains("NoCompare"))
            {
        @:</li>
    }
    else
    {
        @:</p>
    }
    if (!ViewData.Keys.Contains("NoCompare"))
    {
        <li class="compare">
            <a href="#" onclick="return VirtoCart.addToCompareList('@("Item added to compare list".Localize())', '@Url.Encode(Model.CatalogItem.ItemId)','@Url.Encode(Model.CatalogItem.ParentItemId)', 1)">
                @if (!string.Equals(ViewData["View"], "Details"))
                {
                    <span>+</span>
                }
                @("Add to Compare".Localize())
            </a>
        </li>
    }
}