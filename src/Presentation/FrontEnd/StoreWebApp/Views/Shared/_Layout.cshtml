@using System.Reflection
@using VirtoCommerce.Foundation.Frameworks.Extensions
@using VirtoCommerce.Web.Virto.Helpers
<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/themes/default/s")
    @Styles.Render("~/Content/themes/responsive/css")
    <link type="text/css" rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,700&subset=latin,cyrillic-ext,cyrillic" />
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/responsive")
    <base href="~/" />

</head>
<body>
    <div id="layout">
        <div class="header-wrap">
            <div class="head-top">
                <div class="rubber clearfix">
                    <div class="grid_6">
                        <div class="head-switch language">
                            @{Html.RenderPartial("Languages");}
                        </div>
                        <div class="head-switch currency">
                            @{Html.RenderAction("Currencies", "Store");}
                        </div>
                        @if (UserHelper.CustomerSession.IsRegistered)
                        {
                            <p class="welcome-msg">@string.Format("Welcome {0}!".Localize(), UserHelper.CustomerSession.CustomerName)</p>
                        }
                        else
                        {
                            <p id="quickAccessTitle" class="welcome-msg">@("Welcome!".LocalizeHtml())</p>
                        }
                    </div>
                    <div class="grid_6">
                        @{Html.RenderAction("QuickAccess", "Store");}
                    </div>
                </div>
            </div>
            <header role="banner" class="header">
                <div class="rubber clearfix">
                    <div class="grid_12">
                        <h1 onclick="$.open('@Url.Content("~/")')">Virto Commerce</h1>
                        <div class="nav">
                            <a class="control">
                                <span></span>
                                <span></span>
                                <span></span>
                            </a>
                            @Html.MvcSiteMap().Menu(false, true, false)
                        </div>
                        <div class="head-top-block">
                            <a class="control"></a>
                            <div class="search">
                                @Html.Display("", "search")
                            </div>
                            <div class="cart-options">
                                @{ Html.RenderAction("CartOptions", "Store"); }
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        </div>
        @RenderSection("Slider", false)
        <div class="article-wrap">
            <article role="main" class="article clearfix">
                <div class="page-nav">
                    <div class="rubber">
                        @Html.MvcSiteMap().SiteMapPath()
                    </div>
                </div>
                <div class="rubber">
                    @RenderBody()
                </div>
            </article>
        </div>
        <div class="footer-wrap">
            <div class="banners">
                <div class="rubber clearfix">
                    <div class="grid_6 banner shipping">
                        <a title="Free shipping on orders over $50" href="">Free shipping on orders over $50
							</a>
                    </div>
                    <div class="grid_6 banner callback">
                        <a title="Call us! toll free 8-800-123-1234" href="">Call us! toll free <span>8-800-123-1234</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="info">
                <div class="rubber clearfix">
                    <div class="grid_3">
                        <a class="control"></a>
                        <h2>Facebook</h2>
                        <div class="content">
                            <div class="fb">
                                <img alt="" src="images/fb.png">
                            </div>
                        </div>
                    </div>
                    <div class="grid_3">
                        <a class="control"></a>
                        <h2>From twitter</h2>
                        <div class="content">
                            <ul class="twitter-list">
                                <li>RT <a target="_blank" href="http://www.twitter.com/WPCocktail">@@WPCocktail</a>: Gallery post formats, Custom Background, Thumbnails size &amp; lightbox settings for each post... Elegance <a target="_blank" href="http://twitter.com/search?q=%23Wordpress">#Wordpress</a>
                                    <span class="date">1 minute ago</span>
                                </li>
                                <li>Change the way your store look in minutes - check Shopper <a target="_blank" href="http://twitter.com/search?q=%23Magento">#Magento</a> <a target="_blank" href="http://twitter.com/search?q=%23Theme">#Theme</a>
                                    <span class="date">1 hour ago</span>
                                </li>
                            </ul>
                            <footer>
                                <p>Follow us <a target="_blank" href="https://twitter.com/queldoreithemes">on Twitter</a></p>
                            </footer>
                        </div>
                    </div>
                    <div class="grid_3">
                        <a class="control"></a>
                        <h2>Information</h2>
                        <div class="content">
                            <ul>
                                <li>Veritatis et quasi architecto</li>
