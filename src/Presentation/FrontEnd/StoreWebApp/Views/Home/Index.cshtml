@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = Html.Title("Home".Localize());
}

<script>
    $(function ()
    {
        VirtoCommerce.dynamicContents(["MainSlider", "HomeStaffPick", "HomeFeaturedProducts", "HomeNewProducts"],
        function (data)
        {
            var htmlData = $('<div/>').html(data);
            $('#MainSlider').html(htmlData.find('#MainSlider').html());
            $('div.staff-pick ul.products-list').html(htmlData.find('#HomeStaffPick').html());
            $('div.featured ul.products-list').html(htmlData.find('#HomeFeaturedProducts').html());
            $('div.new-products ul.products-list').html(htmlData.find('#HomeNewProducts').html());
            VirtoCommerce.initSliders();
            $('div.staff-pick').virtoSlider();
            $('div.new-products').virtoSlider();
        });
    })
</script>

@section Slider{
    <div id="MainSlider">
        @*        @{Html.RenderAction("ShowDynamicContent", "Banner", new { placeName = "MainSlider" }, true);}*@
    </div>
}

<div class="home content">
    <div class="products slider-products staff-pick">
        <header>
            <h2>@("Staff pick".Localize())</h2>
        </header>
        <ul class="products-list slider-list grid">
            @*@{Html.RenderAction("ShowDynamicContent", "Banner", new { placeName = "HomeStaffPick" }, true);}*@
        </ul>
    </div>
    <div class="products featured">
        <header>
            <h2>@("Featured Products".Localize())</h2>
        </header>
        <ul class="products-list grid">
            @*@{Html.RenderAction("ShowDynamicContent", "Banner", new { placeName = "HomeFeaturedProducts" }, true);}*@
        </ul>
    </div>
    <div class="products slider-products new-products">
        <header>
            <h2>@("New Products".Localize())</h2>
        </header>
        <ul class="products-list slider-list grid">
            @*@{Html.RenderAction("ShowDynamicContent", "Banner", new { placeName = "HomeNewProducts" }, true);}*@
        </ul>
    </div>
</div>
<div class="home sidebar">
    <aside class="block">
        <span class="title">@("Newsletter Sign-up".Localize())</span>
        <p>@("Sign up for our newsletter".Localize())</p>
        <form action="#" method="post" id="newsletter-validate-detail">
            <input type="text" name="email" id="newsletter" title="@("Sign up for our newsletter".Localize())"class="required-entry validate-email" />
            <button type="submit">
                <span>@("subscribe".Localize())</span>
            </button>
        </form>
    </aside>
</div>
