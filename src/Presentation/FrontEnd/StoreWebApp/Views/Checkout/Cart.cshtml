@model CartModel
           
<table class="onestepcheckout-summary data-table cart-table">
    <thead>
        <tr>
            <th class="name">@("Product".LocalizeHtml())</th>
            <th class="qty">@("Qty".LocalizeHtml())</th>
            <th class="total">@("Subtotal".LocalizeHtml())</th>
        </tr>
    </thead>
    <tbody>
    @for (var i=0;i<Model.LineItems.Count();i++)
    {
        @Html.DisplayFor(m => Model.LineItems[i], "LineItem", new { index = i, total = Model.LineItems.Count()})
    }
    </tbody>
</table>
<table class="onestepcheckout-totals">
    <tbody>
        <tr>
            <td class="title">
                @("Subtotal".LocalizeHtml())
            </td>
            <td class="value">
                <span class="price">@Model.SubTotalPriceFormatted</span>
            </td>
        </tr>
	    <tr>
		    <td class="title">
			    @("Shipping".LocalizeHtml())
		    </td>
		    <td class="value">
			    <span class="price">@Model.ShippingPriceFormatted</span>
		    </td>
	    </tr>
		<tr>
            <td class="title">
                @("Tax total".LocalizeHtml())
            </td>
            <td class="value">
                <span class="price">@Model.TaxTotalPriceFormatted</span>
            </td>
        </tr>
        <tr class="grand-total">
            <td class="title">
                @("Grand total".LocalizeHtml())
            </td>
            <td class="value">
                <span class="price">@Model.TotalPriceFormatted</span>
            </td>
        </tr>
    </tbody>
</table>
