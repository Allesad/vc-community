@model List<LineItemModel>
@{
    ViewBag.Title = "Add".Localize();
}
<form id="contactForm" action="@Url.Action("Index", "Cart")" method="post">
    <div>
        @foreach (var li in Model)
        {
            @Html.DisplayFor(m=>li)
        }
        <div style="text-align: center;">
	        <button type="button" title="@("Continue Shopping".LocalizeHtml())" class="button btn-cart" onclick="tb_remove(); VirtoCart.updateMiniCart('@Request["name"]'); return false;" style="width:140px;">
		        <span><span>@("Continue Shopping".LocalizeHtml())</span></span>
	        </button>
            @if (!String.IsNullOrEmpty(Request["name"]) && Request["name"] == CartHelper.WishListName)
            {
	            <button type="button" title="@("View My Wish List".LocalizeHtml())" class="button btn-cart" onclick="tb_remove(); $.open('@Url.Action("WishList", "Account")'); return false;" style="width:140px;">
		            <span><span>@("View My Wish List".LocalizeHtml())</span></span>
	            </button>
            }
            else if (Request["name"] == CartHelper.CompareListName)
            {
            }
            else
            {
	            <button type="submit" title="@("View My Cart".LocalizeHtml())" class="button btn-cart" onclick="tb_remove(); $.open('@Url.Action("Index", "Cart")'); return false;" style="width:140px;">
		            <span><span>@("View My Cart".LocalizeHtml())</span></span>
	            </button>
            }

        </div>
    </div>
</form>

